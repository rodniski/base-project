{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./globals/*"],
      "hooks": ["./globals/hooks"],
      "hooks/*": ["./globals/hooks/*"],
      "lib": ["./globals/lib"],
      "lib/*": ["./globals/lib/*"],
      "stores": ["./globals/stores"],
      "stores/*": ["./globals/stores/*"],
      "ui": ["./globals/ui"],
      "ui/*": ["./globals/ui/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/home/page.tsx"
  ],
  "exclude": ["node_modules"]
}
